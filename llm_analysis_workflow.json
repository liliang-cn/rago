{
  "steps": [
    {
      "id": "fetch_golang_release",
      "name": "Download Go Release Info",
      "type": "tool",
      "tool": "fetch",
      "inputs": {
        "url": "https://api.github.com/repos/golang/go/releases/latest"
      },
      "outputs": {
        "body": "release_data"
      }
    },
    {
      "id": "analyze_with_llm",
      "name": "Analyze Release with LLM",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "Analyze this Go release data and create a summary that includes: 1) Version number, 2) Release date, 3) Top 3 most important changes or features, 4) Any breaking changes, 5) Recommendation for developers (should they upgrade immediately or wait?)",
        "data": "{{release_data}}"
      },
      "outputs": {
        "result": "llm_analysis"
      }
    },
    {
      "id": "extract_key_info",
      "name": "Extract Key Information via LLM",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "From this release data, extract ONLY the version number and return it in format: v1.2.3",
        "data": "{{release_data}}"
      },
      "outputs": {
        "result": "version_number"
      }
    },
    {
      "id": "generate_tweet",
      "name": "Generate Social Media Post with LLM",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "Write a technical but engaging tweet (max 280 chars) about this Go release that developers would find useful",
        "analysis": "{{llm_analysis}}"
      },
      "outputs": {
        "result": "tweet_text"
      }
    },
    {
      "id": "create_markdown_report",
      "name": "Generate Markdown Report via LLM",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "Create a well-formatted markdown report about this release with sections for: Overview, Key Features, Breaking Changes, Migration Guide, and Conclusion",
        "data": "{{release_data}}",
        "analysis": "{{llm_analysis}}"
      },
      "outputs": {
        "result": "markdown_report"
      }
    },
    {
      "id": "get_timestamp",
      "name": "Get Current Time",
      "type": "tool",
      "tool": "time",
      "inputs": {
        "action": "now",
        "format": "2006-01-02_15-04-05"
      },
      "outputs": {
        "time": "report_time"
      }
    },
    {
      "id": "save_analysis",
      "name": "Save LLM Analysis",
      "type": "tool",
      "tool": "filesystem",
      "inputs": {
        "action": "write",
        "path": "./go_release_analysis_{{report_time}}.md",
        "content": "# Go Release Analysis\nGenerated: {{report_time}}\nVersion: {{version_number}}\n\n## LLM Analysis\n{{llm_analysis}}\n\n## Detailed Report\n{{markdown_report}}\n\n## Suggested Tweet\n{{tweet_text}}"
      }
    },
    {
      "id": "decide_alert_level",
      "name": "Determine Alert Priority with LLM",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "Based on this release analysis, determine the urgency level for developers to upgrade. Return exactly one of: CRITICAL, HIGH, MEDIUM, LOW",
        "analysis": "{{llm_analysis}}"
      },
      "outputs": {
        "result": "alert_level"
      }
    },
    {
      "id": "create_alert_if_critical",
      "name": "Create Alert File",
      "type": "condition",
      "conditions": [
        {
          "field": "alert_level",
          "operator": "eq",
          "value": "CRITICAL"
        }
      ],
      "steps": [
        {
          "type": "tool",
          "tool": "filesystem",
          "inputs": {
            "action": "write",
            "path": "./CRITICAL_UPDATE_ALERT.txt",
            "content": "⚠️ CRITICAL GO UPDATE ⚠️\n\nVersion: {{version_number}}\n\n{{llm_analysis}}\n\nImmediate action recommended!"
          }
        }
      ]
    }
  ]
}