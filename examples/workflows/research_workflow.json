{
  "steps": [
    {
      "id": "fetch_documents",
      "name": "Fetch Documents",
      "type": "tool",
      "tool": "file_read",
      "inputs": {
        "path": "{{input.document_path}}"
      },
      "outputs": {
        "content": "document_content"
      },
      "timeout": 30000000000
    },
    {
      "id": "extract_text",
      "name": "Extract Text Content",
      "type": "tool",
      "tool": "text_extractor",
      "inputs": {
        "content": "{{document_content}}",
        "format": "plain"
      },
      "outputs": {
        "text": "extracted_text"
      },
      "timeout": 60000000000
    },
    {
      "id": "analyze_content",
      "name": "Analyze Content",
      "type": "tool",
      "tool": "llm_analyze",
      "inputs": {
        "text": "{{extracted_text}}",
        "analysis_type": "comprehensive",
        "prompt": "Analyze this document and extract key insights, themes, and recommendations"
      },
      "outputs": {
        "analysis": "document_analysis",
        "summary": "document_summary",
        "insights": "key_insights"
      },
      "timeout": 120000000000
    },
    {
      "id": "generate_report",
      "name": "Generate Research Report",
      "type": "variable",
      "inputs": {
        "report": {
          "document": "{{input.document_path}}",
          "summary": "{{document_summary}}",
          "analysis": "{{document_analysis}}",
          "insights": "{{key_insights}}",
          "generated_at": "{{timestamp}}"
        }
      },
      "outputs": {
        "report": "final_report"
      }
    }
  ],
  "variables": {
    "timestamp": "2024-01-01T00:00:00Z",
    "analysis_depth": "detailed",
    "output_format": "json"
  },
  "error_policy": {
    "strategy": "retry",
    "max_retries": 3,
    "retry_delay": 5000000000
  },
  "timeout": 300000000000
}