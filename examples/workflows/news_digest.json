{
  "steps": [
    {
      "id": "fetch_news",
      "name": "Fetch News Headlines",
      "type": "tool",
      "tool": "fetch",
      "inputs": {
        "url": "https://news.ycombinator.com/rss"
      },
      "outputs": {
        "content": "raw_news"
      }
    },
    {
      "id": "extract_headlines",
      "name": "Extract Top Stories",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "Extract the top 5 most interesting headlines from this RSS feed",
        "content": "{{raw_news}}"
      },
      "outputs": {
        "result": "headlines"
      }
    },
    {
      "id": "save_digest",
      "name": "Save Daily Digest",
      "type": "tool",
      "tool": "filesystem",
      "inputs": {
        "action": "write",
        "path": "./news_{{timestamp}}.md",
        "content": "# Daily News Digest\n\n{{headlines}}\n\nGenerated: {{timestamp}}"
      }
    }
  ],
  "triggers": [
    {
      "type": "schedule",
      "schedule": "0 9 * * *",
      "name": "Daily at 9 AM"
    }
  ]
}