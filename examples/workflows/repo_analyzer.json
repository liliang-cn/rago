{
  "steps": [
    {
      "id": "get_git_log",
      "name": "Get Recent Commits",
      "type": "tool",
      "tool": "filesystem",
      "inputs": {
        "action": "execute",
        "command": "git log --oneline -20"
      },
      "outputs": {
        "result": "recent_commits"
      }
    },
    {
      "id": "get_file_stats",
      "name": "Get File Statistics",
      "type": "tool",
      "tool": "filesystem",
      "inputs": {
        "action": "execute",
        "command": "git ls-files | wc -l"
      },
      "outputs": {
        "result": "file_count"
      }
    },
    {
      "id": "get_contributors",
      "name": "Get Contributors",
      "type": "tool",
      "tool": "filesystem",
      "inputs": {
        "action": "execute",
        "command": "git shortlog -sn | head -10"
      },
      "outputs": {
        "result": "top_contributors"
      }
    },
    {
      "id": "analyze_activity",
      "name": "Analyze Repository Activity",
      "type": "tool",
      "tool": "sequential-thinking",
      "inputs": {
        "task": "Analyze this repository activity and create a summary report with insights",
        "commits": "{{recent_commits}}",
        "files": "{{file_count}}",
        "contributors": "{{top_contributors}}"
      },
      "outputs": {
        "report": "analysis_report"
      }
    },
    {
      "id": "save_report",
      "name": "Save Analysis Report",
      "type": "tool",
      "tool": "filesystem",
      "inputs": {
        "action": "write",
        "path": "./repo_analysis_{{timestamp}}.md",
        "content": "# Repository Analysis Report\n\n{{analysis_report}}\n\n---\nGenerated: {{timestamp}}"
      }
    }
  ]
}